<%= form_for @user, html: {multipart: true, class: "form-signin"} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
  <div class="form-label-group">
    <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: "Имя" %>
    <%= f.label :name %>
  </div>

  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: :email, class: "form-control", placeholder: "Email address" %>
    <%= f.label :email %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-lg btn-primary btn-block' %>
    <p class="mt-4">или <%= link_to 'вернуться', :back %></p>
  </div>

  <div class="mb-4">
    <p><%= link_to 'Сменить пароль', edit_user_registration_path, class: "btn btn-sm btn-outline-secondary" %></p>
  </div>
<% end %>
