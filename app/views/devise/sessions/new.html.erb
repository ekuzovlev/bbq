<div class="text-center mb-4">
  <h1 class="h3 mb-3 font-weight-normal"><%= t('.sign_in') %></h1>
</div>

<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" } do |f| %>
  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: :email, class: "form-control", placeholder: "Email address" %>
    <%= f.label :email %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, autocomplete: "password", id: "inputPassword", class: "form-control", placeholder: "Password" %>
    <%= f.label :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <div class="mt-4 mb-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
