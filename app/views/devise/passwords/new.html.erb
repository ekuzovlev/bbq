<div class="text-center mb-4">
  <h1 class="h3 mb-3 font-weight-normal"><%= t('.forgot_your_password') %></h1>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: :email, class: "form-control", placeholder: "Email address" %>
    <%= f.label :email %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <div class="mt-4 mb-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
