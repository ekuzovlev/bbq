<div class="card mb-4 shadow-sm">
  <%= image_pack_tag 'event.jpg', alt: 'Шашлыки', class: "card-img-top img-fluid image-deck" %>
  <div class="card-body">
    <h4 class="card-title"><%= event.title %></h4>
    <ul class="list-unstyled mt-3 mb-2">
      <li><small><%= l event.datetime, format: :short %></small></li>
      <li><%= event.address %></li>
    </ul>
    <div class="pb-2">
      <span class="user-avatar">
      <%# Выводим всех пользователей, которые придут на событие, выводя их аватарки %>
      <% event.visitors.each do |user| %>
        <%= image_tag user_avatar_thumb(user), class: 'img-icon rounded-circle', title: user.name %>
      <% end %>
      </span>
    </div>
    <%= link_to 'Посмотреть', event_path(event), class: 'btn btn-success' %>
  </div>
</div>
