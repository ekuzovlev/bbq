<%= form_for(@event, html: { class: "form-signin" }) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-label-group">
    <%= f.text_field :title, class: 'form-control', placeholder: t('.title') %>
    <%= f.label :title %>
  </div>

  <div class="form-label-group">
    <%= f.text_field :address, class: 'form-control', placeholder: t('.address') %>
    <%= f.label :address %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <div class="mt-4 mb-4">
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
